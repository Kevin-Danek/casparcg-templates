{
    "$schema": "https://superflytv.github.io/GraphicsDataDefinition/gdd-meta-schema/v1/schema.json",
    "title": "Time",
    "type": "object",
    "properties": {
        "theme": {
            "type": "string",
            "title": "Theme",
            "gddType": "single-line",
            "gddOptions": {
                "placeholder": "modra"
            }
        },
        "time": {
            "type": "string",
            "title": "Time",
            "gddType": "single-line",
            "gddOptions": {
                "placeholder": "50:00"
            }
        },
        "period": {
            "type": "string",
            "title": "Period",
            "gddType": "single-line",
            "gddOptions": {
                "placeholder": "1st"
            }
        }
    }
}